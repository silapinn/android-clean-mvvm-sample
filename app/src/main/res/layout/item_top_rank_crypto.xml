<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/top_rank_text_view"
        style="@style/SectionHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_top_rank_crypto_horizontal_margin"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/top_rank_crypto_section_headline" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_rank_coins_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/item_top_rank_crypto_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_rank_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>