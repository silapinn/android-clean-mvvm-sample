<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_coin_item"
    android:backgroundTint="#C5E6FF"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/icon_bg_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bg_gift_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_bg_image_view"
        app:layout_constraintEnd_toEndOf="@id/icon_bg_image_view"
        app:layout_constraintStart_toStartOf="@id/icon_bg_image_view"
        app:layout_constraintTop_toTopOf="@id/icon_bg_image_view"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_gift" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_bg_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="You can earn $10  when you invite a friend to buy crypto. Invite your friend" />

</androidx.constraintlayout.widget.ConstraintLayout>