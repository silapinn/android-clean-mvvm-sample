<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/error_description_text_view"
        style="@style/ErrorDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_error_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_action_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/item_error_action"
        android:textAppearance="@style/ActionTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_description_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>